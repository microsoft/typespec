
{
    "compilerOptions": {
      "composite": true,
      "alwaysStrict": true,
      "forceConsistentCasingInFileNames": true,
      "preserveConstEnums": true,
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "sourceMap": true,
      "declarationMap": true,
      "strict": true,
      "declaration": true,
      "stripInternal": true,
      "noEmitHelpers": false,
      "target": "es2021",
      "lib": ["es2021"],
      "experimentalDecorators": true,
      "newLine": "LF",
      "outDir": "dist",
      "rootDir": ".",
      "tsBuildInfoFile": "temp/tsconfig.tsbuildinfo",
      "types": ["node"],
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
  