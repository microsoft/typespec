{
  "name": "@typespec/bundler",
  "version": "0.1.0",
  "author": "Microsoft Corporation",
  "description": "Package to bundle a typespec library.",
  "homepage": "https://microsoft.github.io/typespec",
  "readme": "https://github.com/Azure/typespec/blob/master/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/typespec.git"
  },
  "bugs": {
    "url": "https://github.com/Azure/typespec/issues"
  },
  "keywords": [
    "typespec"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "tspMain": "dist/src/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "bundle": "node ./dist/src/cli.js",
    "clean": "rimraf ./dist ./temp",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "test": "mocha",
    "test-official": "c8 mocha --forbid-only --reporter mocha-multi-reporters",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts"
  },
  "files": [
    "lib/*.tsp",
    "dist/**",
    "!dist/test/**"
  ],
  "dependencies": {
    "@typespec/compiler": "~0.45.0",
    "@rollup/plugin-virtual": "~3.0.1",
    "@rollup/plugin-commonjs": "~23.0.2",
    "@rollup/plugin-json": "~5.0.1",
    "@rollup/plugin-node-resolve": "~15.0.1",
    "@rollup/plugin-multi-entry": "~6.0.0",
    "rollup": "~3.4.0"
  },
  "devDependencies": {
    "@types/mocha": "~10.0.0",
    "@types/node": "~18.11.9",
    "@typespec/eslint-config-typespec": "~0.7.0",
    "eslint": "^8.36.0",
    "mocha": "~10.2.0",
    "mocha-junit-reporter": "~2.2.0",
    "mocha-multi-reporters": "~1.5.1",
    "c8": "~7.13.0",
    "rimraf": "~5.0.0",
    "typescript": "~5.0.2",
    "vite": "^4.2.1"
  }
}
