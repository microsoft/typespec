{
  "name": "@typespec/bundler",
  "version": "0.1.0-alpha.2",
  "author": "Microsoft Corporation",
  "description": "Package to bundle a typespec library.",
  "homepage": "https://microsoft.github.io/typespec",
  "readme": "https://github.com/microsoft/typespec/blob/main/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/typespec.git"
  },
  "bugs": {
    "url": "https://github.com/microsoft/typespec/issues"
  },
  "keywords": [
    "typespec"
  ],
  "type": "module",
  "bin": {
    "typespec-bundler": "./dist/src/cli.js"
  },
  "main": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./vite": "./dist/src/vite/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "bundle": "node ./dist/src/cli.js",
    "clean": "rimraf ./dist ./temp",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "test": "mocha",
    "test-official": "c8 mocha --forbid-only --reporter mocha-multi-reporters",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts"
  },
  "files": [
    "lib/*.tsp",
    "dist/**",
    "!dist/test/**"
  ],
  "dependencies": {
    "@typespec/compiler": "workspace:~0.49.0",
    "@rollup/plugin-virtual": "~3.0.1",
    "@rollup/plugin-commonjs": "~25.0.4",
    "@rollup/plugin-json": "~6.0.0",
    "@rollup/plugin-node-resolve": "~15.2.1",
    "@rollup/plugin-multi-entry": "~6.0.0",
    "rollup": "~3.29.2",
    "@rollup/plugin-alias": "~5.0.0",
    "yargs": "~17.7.2",
    "picocolors": "~1.0.0"
  },
  "devDependencies": {
    "@types/mocha": "~10.0.1",
    "@types/node": "~18.11.9",
    "@typespec/eslint-config-typespec": "workspace:~0.49.0",
    "eslint": "^8.49.0",
    "mocha": "~10.2.0",
    "mocha-junit-reporter": "~2.2.1",
    "mocha-multi-reporters": "~1.5.1",
    "c8": "~8.0.1",
    "rimraf": "~5.0.1",
    "typescript": "~5.2.2",
    "vite": "^4.4.9",
    "@types/yargs": "~17.0.24"
  }
}
