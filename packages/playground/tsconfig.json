{
  "extends": "../tsconfig.json",
  "references": [
    { "path": "../compiler/tsconfig.json" },
    { "path": "../rest/tsconfig.json" },
    { "path": "../openapi/tsconfig.json" },
    { "path": "../openapi3/tsconfig.json" }
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "tsBuildInfoFile": "temp/tsconfig.tsbuildinfo",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": ["DOM"],
    "types": ["@emotion/react"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "e2e/**/*.ts",
    "vite.config.ts",
    "definitions/*.d.ts"
  ]
}
