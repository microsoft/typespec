{
  "name": "@cadl-lang/playground",
  "private": true,
  "version": "1.0.0",
  "author": "Microsoft Corporation",
  "description": "An app to play with CADL in the browser",
  "homepage": "https://github.com/microsoft/cadl",
  "readme": "https://github.com/microsoft/cadl/blob/main/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/cadl.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/cadl/issues"
  },
  "keywords": [
    "cadl"
  ],
  "type": "module",
  "main": "dist/src/lib.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./dist-dev ./temp ./cadlContents.json",
    "build": "tsc -p . && vite build 2>&1",
    "preview": "npm run build && vite preview",
    "start": "vite",
    "watch": "vite",
    "e2e": "cross-env PW_EXPERIMENTAL_TS_ESM=1 playwright test -c e2e ",
    "e2e:headed": "cross-env PW_EXPERIMENTAL_TS_ESM=1 playwright test -c e2e --headed",
    "test": "npm run e2e",
    "test-official": "npm run e2e",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix"
  },
  "files": [
    "lib/*.cadl",
    "dist/**",
    "!dist/test/**"
  ],
  "dependencies": {
    "@cadl-lang/versioning": "~0.10.0",
    "@cadl-lang/compiler": "~0.37.0",
    "@cadl-lang/rest": "~0.19.0",
    "@cadl-lang/openapi3": "~0.17.0",
    "@cadl-lang/openapi": "~0.14.0",
    "@cadl-lang/html-program-viewer": "~0.5.0",
    "@emotion/react": "^11.10.4",
    "@vitejs/plugin-react": "~2.2.0",
    "es-module-shims": "~1.6.2",
    "monaco-editor": "~0.34.0",
    "prettier": "~2.7.1",
    "react-dom": "~18.2.0",
    "react": "~18.2.0",
    "vite": "^3.2.4",
    "vscode-languageserver-textdocument": "~1.0.1",
    "vscode-languageserver": "~8.0.2",
    "lzutf8": "0.6.2",
    "debounce": "~1.2.1",
    "swagger-ui": "~4.15.0"
  },
  "devDependencies": {
    "@types/mocha": "~10.0.0",
    "@types/node": "~18.11.9",
    "@types/prettier": "2.6.0",
    "@types/react-dom": "~18.0.1",
    "@types/react": "~18.0.5",
    "@cadl-lang/eslint-config-cadl": "~0.4.1",
    "@cadl-lang/bundler": "~0.1.0",
    "@babel/core": "^7.0.0",
    "eslint": "^8.12.0",
    "mocha": "~10.1.0",
    "mocha-junit-reporter": "~2.2.0",
    "mocha-multi-reporters": "~1.5.1",
    "c8": "~7.12.0",
    "@playwright/test": "~1.28.1",
    "playwright": "~1.28.1",
    "rimraf": "~3.0.2",
    "cross-env": "~7.0.3",
    "typescript": "~4.9.3",
    "@types/debounce": "~1.2.1",
    "@types/swagger-ui": "~3.52.0",
    "rollup-plugin-visualizer": "~5.8.0"
  }
}
