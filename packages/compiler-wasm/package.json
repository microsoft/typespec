{
  "name": "@typespec/compiler-wasm",
  "version": "0.1.0",
  "author": "Microsoft Corporation",
  "description": "TypeSpec Compiler WebAssembly Component for WASI-based embedding",
  "homepage": "https://typespec.io",
  "readme": "https://github.com/microsoft/typespec/blob/main/packages/compiler-wasm/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/typespec.git"
  },
  "bugs": {
    "url": "https://github.com/microsoft/typespec/issues"
  },
  "keywords": [
    "typespec",
    "wasm",
    "webassembly",
    "component-model"
  ],
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./temp ./build",
    "build": "pnpm -C ../compiler build && pnpm compile && pnpm bundle",
    "compile": "tsc -p .",
    "bundle": "node scripts/bundle.js",
    "componentize": "node -e \"require('fs').mkdirSync('build',{recursive:true})\" && jco componentize dist/bundle.js -w typespec.wit --world-name typespec -o build/typespec-compiler.wasm",
    "build:wasm": "pnpm build && pnpm componentize",
    "watch": "tsc -p . --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=junit --reporter=default",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix"
  },
  "files": [
    "dist/**",
    "build/**",
    "typespec.wit",
    "!dist/test/**"
  ],
  "dependencies": {
    "@typespec/compiler": "workspace:^"
  },
  "devDependencies": {
    "@bytecodealliance/jco": "^1.15.4",
    "@types/node": "~25.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "c8": "^10.1.3",
    "esbuild": "^0.27.0",
    "rimraf": "~6.1.2",
    "typescript": "~5.9.2",
    "vitest": "^4.0.15"
  }
}
