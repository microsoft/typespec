---
import "@site/src/css/custom.css";
import { ViewTransitions } from "astro:transitions";

import Footer from "@astrojs/starlight/components/Footer.astro";
import Header from "@astrojs/starlight/components/Header.astro";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <ViewTransitions />
  </head>
  <body class="relative overflow-x-hidden bg-base-1 font-sans">
    <!-- pt is set according to the height of the header -->
    <main class="pt-[4.5rem] tablet:pt-24">
      <slot />
    </main>
  </body>
</html>
