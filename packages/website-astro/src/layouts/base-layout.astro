---
import "@site/src/css/custom.css";
import { ViewTransitions } from "astro:transitions";
import Header from "@site/src/components/header/header.astro";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <ViewTransitions />
  </head>
  <body class="body">
    <Header />
    <!-- pt is set according to the height of the header -->
    <main class="pt-[4.5rem] tablet:pt-24">
      <slot />
    </main>
  </body><style>
    body {
      margin: 0;
    }
  </style>
</html>
