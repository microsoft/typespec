<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Microsoft.TypeSpec.Generator</PackageId>
    <OutputType>Exe</OutputType>
    <Version>1.0.0-beta.1</Version>
    <!-- This override is necessary to use MEF in .NET 10+ -->
    <AppContextSwitchOverrides>
      Switch.System.ComponentModel.Composition.UseCscLoadContext=true
    </AppContextSwitchOverrides>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" />
    <PackageReference Include="Microsoft.Build" />
    <PackageReference Include="System.ComponentModel.Composition" />
    <PackageReference Include="NuGet.Configuration" />
    <PackageReference Include="NuGet.Versioning" />
    <PackageReference Include="NuGet.Protocol" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" />
    <PackageReference Include="System.Memory.Data" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Microsoft.TypeSpec.Generator.Input\src\Microsoft.TypeSpec.Generator.Input.csproj" />
  </ItemGroup>

</Project>
