{
  "extends": "../tsconfig.json",
  "references": [
    { "path": "../compiler/tsconfig.json" },
    { "path": "../rest/tsconfig.json" },
    { "path": "../openapi/tsconfig.json" },
    { "path": "../openapi3/tsconfig.json" }
  ],
  "compilerOptions": {
    "outDir": "dist-dev",
    "rootDir": ".",
    "skipLibCheck": true,
    "tsBuildInfoFile": "temp/tsconfig.tsbuildinfo",
    "jsx": "react-jsx",
    "checkJs": true,
    "allowJs": true,
    "lib": ["DOM", "ES2022"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "e2e/**/*.ts",
    "vite.config.ts",
    "samples/**/*.js",
    "samples/**/*.d.ts"
  ]
}
