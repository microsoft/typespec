{
  "name": "@typespec/internal-build-utils",
  "version": "0.4.0",
  "author": "Microsoft Corporation",
  "description": "Internal library to TypeSpec providing helpers to build.",
  "homepage": "https://microsoft.github.io/typespec",
  "readme": "https://github.com/Azure/typespec/blob/master/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/typespec.git"
  },
  "bugs": {
    "url": "https://github.com/Azure/typespec/issues"
  },
  "keywords": [
    "typespec"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "typespec-build-tool": "cmd/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./temp",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "test": "mocha",
    "test-official": "c8 mocha --forbid-only --reporter mocha-multi-reporters",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts"
  },
  "files": [
    "lib/*.tsp",
    "dist/**",
    "!dist/test/**"
  ],
  "dependencies": {
    "yargs": "~17.6.2",
    "strip-json-comments": "~4.0.0",
    "cspell": "~6.14.3"
  },
  "devDependencies": {
    "@types/mocha": "~10.0.0",
    "@types/node": "~18.11.9",
    "@types/yargs": "~17.0.2",
    "@typespec/eslint-config-typespec": "~0.6.0",
    "eslint": "^8.12.0",
    "mocha": "~10.1.0",
    "mocha-junit-reporter": "~2.2.0",
    "mocha-multi-reporters": "~1.5.1",
    "c8": "~7.12.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.9.3",
    "chokidar": "~3.5.3"
  }
}
