{
  "compilerOptions": {
    "composite": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2023",
    "types": ["node"],
    "lib": ["es2023", "DOM"],
    "experimentalDecorators": true,
    "newLine": "LF",
    "skipLibCheck": true
  }
}
