{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 100,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "pluginSearchDirs": ["./packages/compiler"],
  "plugins": [
    "./packages/prettier-plugin-typespec",
    "./packages/compiler/node_modules/prettier-plugin-organize-imports"
  ],
  "overrides": [
    {
      "files": "*.tsp",
      "options": {
        "parser": "typespec"
      }
    }
  ]
}
